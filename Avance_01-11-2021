import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class Taller1 {
		static int cantidadUsuarios=0;
		static String[] nombreCuenta = new String[999];
		static String[] password = new String[999];
		static String[] nick = new String[999];
		static int[] nivelCuenta = new int[999];
		static int[] rp = new int[999];
		static int[] totalPersonajes = new int[999];
		static String[] personajes = new String[999];
		static int[] cantSkins = new int[999];
		static String[] nomSkins = new String[999];
		static String[] region = new String[999];
	public static void main(String[] args) {
	}
	
	public static void Carga_C() throws NumberFormatException, IOException {
		File archivo = new File ("cuentas.txt"); 
		FileReader text = new FileReader (archivo);
		BufferedReader reader = new BufferedReader(text); 
		String linea;
		String[] partes;
		int contadorUsuarios = 0;
		while((linea = reader.readLine())!=null) {
			partes  = linea.split(",");
			nombreCuenta[contadorUsuarios] = partes[0];
			password[contadorUsuarios] = partes[1];
			nick[contadorUsuarios] = partes[2];
			nivelCuenta[contadorUsuarios] = Integer.parseInt(partes[3]);
			rp[contadorUsuarios]=Integer.parseInt(partes[4]);
			totalPersonajes[contadorUsuarios]=Integer.parseInt(partes[5]);
			for(int i = 0;i<totalPersonajes.length;i++) {
				personajes[contadorUsuarios] = partes[6];
			}
			cantSkins[contadorUsuarios]=Integer.parseInt(partes[7]);
			for(int j  = 0;j<cantSkins.length;j++) {
				nomSkins[contadorUsuarios] = partes[8];
			}
			region[contadorUsuarios] = partes[9];
			contadorUsuarios = cantidadUsuarios;
		}
	}
	public static void iniciar_sesion() { 
		boolean llave = true;
		while(llave) {
			System.out.println("INICIAR SESION");
			System.out.println("Escriba el nombre de la cuenta");
			System.out.println("Para finalizar el programa introduzca (1): ");
			Scanner sc = new Scanner(System.in);
			String nombreCuenta2 = sc.nextLine();
			int posicion = 0;
			if (nombreCuenta2.equals(nombreCuenta)) {
				posicion = 2;
			}
			else {
				System.out.println("Usuario no existe");
				System.out.println("Desea crar un nuevo Usuario");
				System.out.println("Y/N");
				String clave = sc.nextLine();
				if((clave).equals("y")||(clave).equals("Y")) {
					nuevo_usuario(nombreCuenta2);
				}
				else if((clave).equals("n")||(clave).equals("N")) {
					/// NO SE HACE NADA
				}
				else{
					System.out.println("ERROR COMANDO NO RECONOCIDO");
				}
				System.out.println("Volviendo al principio de la operacion");
			}
			if (posicion==2) {
				System.out.println("Escriba su contraseña");
				String contraseña = sc.nextLine();
				if((contraseña).equals(password)) {
					System.out.println("Contraseña correcta");
				}
				else{
					System.out.println("ERROR-Contraseña invalida");
				}
				System.out.println("Volviendo al principio de la operacion");
			}
			else {
				llave=false;
				System.out.println("Se a finalizado la operacion");
			}
		}
		
	}
	public static void nuevo_usuario(String nombreCuenta2){
		Scanner sc = new Scanner(System.in);
		System.out.println("Porfavor crea el nombre de su cuenta:");
		String name = sc.nextLine();
		System.out.println("Porfavor indique su contraseña:");
		String contraseña = sc.nextLine();
		System.out.println("Porfavor indique su Nick:");
		String nick2 = sc.nextLine();
		nombreCuenta[cantidadUsuarios]=name;
		password[cantidadUsuarios]=contraseña;
		nick[cantidadUsuarios]=nick2;
		rp[cantidadUsuarios]=0;
		cantidadUsuarios++;
	}
}
