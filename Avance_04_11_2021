interface Sistema {
	boolean AgregarPersonaje();
	boolean AgregarSkin();
	void AsociarPersonajeSkin();
	boolean agregarCuenta();
	void asociarPersonajeCuenta();
	void asociarSkinCuenta();
	void setRecaudacionPersonaje();
	boolean Login();
	boolean Registro();
	void comprarSkin();
	void comprarPersonaje();
	void mostrarSkins();
	void mostrarInventario();
	void recargarRp();
	void mostrarCuenta();
	void cambiarPass();	
}
class SistemaImpl implements Sistema{
	private String [] PersonajesJuego;
	private int max = 308;
	private int cantidadPersonajesJuego = 0;
	public boolean AgregarPersonaje(String nombrePersonaje, String rolPersonaje) {
		if(cantidadPersonajesJuego < max) {
			PersonajesJuego[cantidadPersonajesJuego] = nombrePersonaje;
			PersonajesJuego[cantidadPersonajesJuego+1] = rolPersonaje;
			cantidadPersonajesJuego ++;
			return true;
		}
		else {
			return false;
		}
	}
	private String [] SkinsJuego;
	private int max1 = 999;
	private int cantidadSkinsJuego = 0;
	public boolean AgregarSkin(String nombreSkin,String calidadSkin) {
		if(cantidadPersonajesJuego < max1) {
			SkinsJuego[cantidadSkinsJuego] = nombreSkin;
			SkinsJuego[cantidadSkinsJuego+1] = calidadSkin;
			cantidadSkinsJuego ++;
			return true;
		}
		else {
			return false;
		}
	}
	public void AsociarPersonajeSkin(String nombrePersonaje, String nombreSkin) {
		//nombrePersonaje.getSkinsJuego.AgregarSkin;
	}
	private String [] CuentasJuego;
	private int max2 = 999;
	private int cantidadCuentasJuego = 0;
	public boolean agregarCuenta(String nombreCuenta, String password, String nick, String nivelCuenta, String rp, String region) {
		if(cantidadCuentasJuego < max2) {
			CuentasJuego[cantidadCuentasJuego] = nombreCuenta;
			CuentasJuego[cantidadCuentasJuego+1] = password;
			CuentasJuego[cantidadCuentasJuego+2] = nick;
			CuentasJuego[cantidadCuentasJuego+3] = nivelCuenta;
			CuentasJuego[cantidadCuentasJuego+4] = rp;
			CuentasJuego[cantidadCuentasJuego+5] = region;
			cantidadCuentasJuego++;
			return true;
		}
		else {
			return false;
		}
	}
