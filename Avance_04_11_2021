public class Taller1 {
		//Carga archivo "Cuentas.txt"
		public static int cantidadUsuarios=0;
		public static String[] nombreCuenta = new String[999];
		public static String[] password = new String[999];
		public static String[] nick = new String[999];
		public static int[] nivelCuenta = new int[999];
		public static int[] rp = new int[999];
		public static int[] cantPersonajes = new int[999];
		public static String[] personajes = new String[999];
		public static int[] cantSkins = new int[999];
		public static String[] nombreSkins = new String[999];
		public static String[] region = new String[999];
		//Carga archivo "Personajes.txt"
		public static int cantidadPersonajes=0;
		public static String[] nombrePersonaje = new String[999];
		public static String[] rolPersonaje = new String[999];
		public static int[] cantidadSkins = new int[999];
		public static String[] nombreSkin = new String[999];
		public static String[] calidadSkin = new String[999];
		//Carga archivo "Estadisticas.txt"
		public static String[] personajeR = new String[999];
		public static int[] recaudacion = new int [999];
		
		
	
	public static void main(String[] args) {
	}
	public static void Carga_C() throws NumberFormatException, IOException {
		File archivo = new File ("cuentas.txt"); 
		FileReader text = new FileReader (archivo);
		BufferedReader reader = new BufferedReader(text); 
		String linea;
		String[] partes;
		int contadorUsuarios = 0;
		while((linea = reader.readLine())!=null) {
			partes  = linea.split(",");
			nombreCuenta[contadorUsuarios] = partes[0];
			password[contadorUsuarios] = partes[1];
			nick[contadorUsuarios] = partes[2];
			nivelCuenta[contadorUsuarios] = Integer.parseInt(partes[3]);
			rp[contadorUsuarios]=Integer.parseInt(partes[4]);
			cantPersonajes[contadorUsuarios]=Integer.parseInt(partes[5]);
			for(int i = 0;i<cantPersonajes.length;i++) {
				personajes[contadorUsuarios] = partes[6];
			}
			cantSkins[contadorUsuarios]=Integer.parseInt(partes[7]);
			for(int j  = 0;j<cantSkins.length;j++) {
				nombreSkins[contadorUsuarios] = partes[8];
			}
			region[contadorUsuarios] = partes[9];
			contadorUsuarios = cantidadUsuarios;
			contadorUsuarios ++;
		}
		reader.close();
	}
	
	public static void Carga_P() throws NumberFormatException, IOException {
		File archivo = new File ("Personajes.txt"); 
		FileReader text = new FileReader (archivo);
		BufferedReader reader = new BufferedReader(text); 
		String linea;
		String[] partes;
		int contadorPersonajes = 0;
		while((linea = reader.readLine())!=null) {
			partes  = linea.split(",");
			nombrePersonaje[contadorPersonajes]=partes[0];
			rolPersonaje[contadorPersonajes]=partes[1];
			cantidadSkins[contadorPersonajes]=Integer.parseInt(partes[2]);
			for(int i = 0;i<cantidadSkins.length;i++) {
				nombreSkin[contadorPersonajes] = partes[3];	
				calidadSkin[contadorPersonajes]=partes[4];
			}
			
		}
		reader.close();
	}
	public static void Carga_E() throws NumberFormatException, IOException {
		File archivo = new File ("Estadisticas.txt"); 
		FileReader text = new FileReader (archivo);
		BufferedReader reader = new BufferedReader(text); 
		String linea;
		String[] partes;
		int contador = 0;
		while((linea = reader.readLine())!=null) {
			partes  = linea.split(",");
			personajeR[contador]=partes[0];
			recaudacion[contador]=Integer.parseInt(partes[1]);
		}
		reader.close();
	}
	public static void iniciar_sesion() { 
		boolean llave = true;
		while(llave) {
			System.out.println("INICIAR SESION");
			System.out.println("Escriba el nombre de la cuenta");
			System.out.println("Para finalizar el programa introduzca (1): ");
			Scanner sc = new Scanner(System.in);
			String nombreCuenta2 = sc.nextLine();
			int posicion = 0;
			if (nombreCuenta2.equals(nombreCuenta)) {
				posicion = 2;
			}
			else {
				System.out.println("Usuario no existe");
				System.out.println("Desea crar un nuevo Usuario");
				System.out.println("Y/N");
				String clave = sc.nextLine();
				if((clave).equals("y")||(clave).equals("Y")) {
					nuevo_usuario(nombreCuenta2);
				}
				else if((clave).equals("n")||(clave).equals("N")) {
					/// NO SE HACE NADA
				}
				else{
					System.out.println("ERROR COMANDO NO RECONOCIDO");
				}
				System.out.println("Volviendo al principio de la operacion");
			}
			if (posicion==2) {
				System.out.println("Escriba su contraseña");
				String contraseña = sc.nextLine();
				if((contraseña).equals(password)) {
					System.out.println("Contraseña correcta");
				}
				else{
					System.out.println("ERROR-Contraseña invalida");
				}
				System.out.println("Volviendo al principio de la operacion");
			}
			else {
				llave=false;
				System.out.println("Se a finalizado la operacion");
			}
		}
		
	}
	public static void nuevo_usuario(String nombreCuenta2){
		Scanner sc = new Scanner(System.in);
		System.out.println("Porfavor crea el nombre de su cuenta:");
		String name = sc.nextLine();
		System.out.println("Porfavor indique su contraseña:");
		String contraseña = sc.nextLine();
		System.out.println("Porfavor indique su Nick:");
		String nick2 = sc.nextLine();
		nombreCuenta[cantidadUsuarios]=name;
		password[cantidadUsuarios]=contraseña;
		nick[cantidadUsuarios]=nick2;
		rp[cantidadUsuarios]=0;
		cantidadUsuarios++;
	}
}
