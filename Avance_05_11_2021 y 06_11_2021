class Cuenta{
	private String nombreCuenta;
	private String password;
	private String nick;
	private int nivelCuenta;
	private int rp;
	private int cantPersonajes;
	private boolean StatusBloqueo;
	private String region;
	private String[] personajesObtenidos;
	public Cuenta(String nombreCuenta1, String region1, int rp1 ,int nivel, String nick1, boolean bloqueado1, String password1, int cantPersonajes1, String [] personajesObtenidos1) {
		nombreCuenta = nombreCuenta1;
		region = region1;
		rp = rp1;
		nivelCuenta = nivel;
		nick = nick1;
		StatusBloqueo = bloqueado1;
		password = password1;
		cantPersonajes = cantPersonajes1;
		personajesObtenidos = personajesObtenidos1;
	}
	public  String getnombreCuenta() {
		return nombreCuenta;
	}
	public void setnombreCuenta(String nombreCuenta1) {
		this.nombreCuenta = nombreCuenta1;
	}
	public  String getpassword() {
		return password;
	}
	public void setpassword(String password1) {
		this.password = password1;
	}
	public  String getnick() {
		return nick;
	}
	public void setnick(String nick1) {
		this.nick = nick1;
	}
	public int getnivelCuenta() {
		return nivelCuenta;
	}
	public void setnivelCuneta(int nivel) {
		this.nivelCuenta = nivel;
	}
	public int getrp() {
		return rp;
	}
	public void setrp(int rp1) {
		this.rp = rp1;
	}
	public int getcantPersonajes() {
		return cantPersonajes;
	}
	public void setcantPersonajes(int cantPersonajes1) {
		this.cantPersonajes = cantPersonajes1;
	}
	public boolean getStatusBloqueo() {
		return StatusBloqueo;
	}
	public void setStatusBloqueo(boolean bloqueo1) {
		this.StatusBloqueo = bloqueo1;
	}
	public String getregion() {
		return region;
	}
	public void setregion(String region1) {
		this.region = region1;
	}
}
