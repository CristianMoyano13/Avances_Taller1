public class Taller1 {
		//Carga archivo "Cuentas.txt"
		public static int cantidadUsuarios=0;
		public static String[] nombreCuenta = new String[999];
		public static String[] password = new String[999];
		public static String[] nick = new String[999];
		public static int[] nivelCuenta = new int[999];
		public static int[] rp = new int[999];
		public static int[] cantPersonajes = new int[999];
		public static String[] personajes = new String[999];
		public static int[] cantSkins = new int[999];
		public static String[] nombreSkins = new String[999];
		public static String[] region = new String[999];
		//Carga archivo "Personajes.txt"
		public static int cantidadPersonajes=0;
		public static String[] nombrePersonaje = new String[999];
		public static String[] rolPersonaje = new String[999];
		public static int[] cantidadSkins = new int[999];
		public static String[] nombreSkin = new String[999];
		public static String[] calidadSkin = new String[999];
		//Carga archivo "Estadisticas.txt"
		public static String[] personajeR = new String[999];
		public static int[] recaudacion = new int [999];
		
		
	
	public static void main(String[] args) {
	}
	//public static void Carga_C() throws NumberFormatException, IOException {
		File archivo = new File ("cuentas.txt"); 
		FileReader text = new FileReader (archivo);
		BufferedReader reader = new BufferedReader(text); 
		String linea;
		String[] partes;
		while((linea = reader.readLine())!=null) {
			partes  = linea.split(",");
			nombreCuenta[cantidadUsuarios] = partes[0];
			password[cantidadUsuarios] = partes[1];
			nick[cantidadUsuarios] = partes[2];
			nivelCuenta[cantidadUsuarios] = Integer.parseInt(partes[3]);
			rp[cantidadUsuarios]=Integer.parseInt(partes[4]);
			cantPersonajes[cantidadUsuarios]=Integer.parseInt(partes[5]);
			for(int i = 0;i<cantPersonajes.length;i++) {
				personajes[cantidadUsuarios] = partes[6];
			}
			cantSkins[cantidadUsuarios]=Integer.parseInt(partes[7]);
			for(int j  = 0;j<cantSkins.length;j++) {
				nombreSkins[cantidadUsuarios] = partes[8];
			}
			region[cantidadUsuarios] = partes[9];
			cantidadUsuarios ++;
		}
		reader.close();
	}
	
	public static void Carga_P() throws NumberFormatException, IOException {
		File archivo = new File ("Personajes.txt"); 
		FileReader text = new FileReader (archivo);
		BufferedReader reader = new BufferedReader(text); 
		String linea;
		String[] partes;
		while((linea = reader.readLine())!=null) {
			partes  = linea.split(",");
			nombrePersonaje[cantidadPersonajes]=partes[0];
			rolPersonaje[cantidadPersonajes]=partes[1];
			cantidadSkins[cantidadPersonajes]=Integer.parseInt(partes[2]);
			for(int i = 0;i<cantidadSkins.length;i++) {
				nombreSkin[cantidadPersonajes] = partes[3];	
				calidadSkin[cantidadPersonajes] = partes[4];
			}
			
		}
		reader.close();
	}
	public static void Carga_E() throws NumberFormatException, IOException {
		File archivo = new File ("Estadisticas.txt"); 
		FileReader text = new FileReader (archivo);
		BufferedReader reader = new BufferedReader(text); 
		String linea;
		String[] partes;
		int contador = 0;
		while((linea = reader.readLine())!=null) {
			partes  = linea.split(",");
			personaje[contador]=partes[0];
			recaudacion[contador]=(int) Double.parseDouble(partes[1]);
		}
		reader.close();
	}
	
	}
}
